<ol class="burger">
    <h2>BURGERS</h2>
    {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}</li><button class="devouredBurger" name={{id}}>Devour</button>
    {{/unless}}
    {{/each}}
</ol>

<ol class="devoured">
    <h2>DEVOURED</h2>
    {{#each burgers}}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
    {{/each}}
</ol>

<form class="create-form">

    <div class="form-group">
        <input type="text" id="burgerName" placeholder="Enter Your Burger" name="name">
    </div>
    <button type="submit" id="clickBurger">Make</button>
</form>
<script src="/assets/js/script.js" type="text/javascript"></script>